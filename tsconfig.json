{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src", // 소스 코드가 위치한 폴더
    "outDir": "./dist", // 컴파일된 JavaScript 파일이 생성될 폴더
    "forceConsistentCasingInFileNames": true, // 파일 이름 대소문자 일관성 검사
    "sourceMap": true, // 소스 맵을 생성합니다 (디버깅에 유용)
    "resolveJsonModule": true // JSON 모듈을 가져올 수 있게 합니다
  },
  "include": ["src", "src/**/*.ts", "src/**/*.d.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
